@{
    ViewData["Title"] = "Home Page";
}



<div id="app">


    <step-navigation :steps="steps" :currentstep="currentstep">
    </step-navigation>

    <div v-show="currentstep == 1">
 
        <div class="row">
            <div class="col-4 offset-4">
                <h2 class="text-center mb-3">Quick Name Search</h2>
                @*<div class="small text-center"><a href="#">complete my application</a> | <a href="#">track my application</a> | <a href="#">advanced search</a> </div>*@

                <div class="input-group mb-3 input-group-lg">
                    <input type="text" class="form-control" v-model="Qry">
                    <div class="input-group-append">
                        <button class="btn btn-secondary" type="button" id="button-addon2" v-on:click="SearchNames">GO</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-4 offset-4" v-for="item in BusinessMatches.results">

                @*<div class="text-center">
                    <samp v-html="item.matchPercentage"></samp>
                </div>*@
                <div class=" text-uppercase small" v-html="item.word"></div>

                <div class="progress" style="height: 5px; margin-bottom:10px;">
                    <div class="progress-bar" role="progressbar" 
                         :style="'width: ' + ((item.matchPercentage/BusinessMatches.maxHit) * 100) + '%'" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>

    </div>

    <div v-show="currentstep == 2">
        <h3>Step 2</h3>
        <div class="form-group">
            <label for="select">Example select</label>
            <select class="form-control" name="select">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>
        </div>
    </div>

    <div v-show="currentstep == 3">
        <h3>Step 3</h3>
        <div class="form-group">
            <label for="textarea">Example textarea</label>
            <textarea class="form-control" name="textarea" rows="4"></textarea>
        </div>
        <div class="form-group">
            <label for="file">File input</label>
            <input type="file" class="form-control-file" name="file" aria-describedby="fileHelp">
            <small id="fileHelp" class="form-text text-muted">This is some placeholder block-level help text for the above input. It's a bit lighter and easily wraps to a new line.</small>
        </div>
    </div>

    <step v-for="step in steps" :currentstep="currentstep" :key="step.id" :step="step" :stepcount="steps.length" @@step-change="stepChanged">
    </step>

    <script type="x-template" id="step-navigation-template">
        <ol class="step-indicator">
            <li v-for="step in steps" is="step-navigation-step" :key="step.id" :step="step" :currentstep="currentstep">
            </li>
        </ol>
    </script>

    <script type="x-template" id="step-navigation-step-template">
        <li :class="indicatorclass">
            <div class="step"><i :class="step.icon_class"></i></div>
            <div class="caption hidden-xs hidden-sm">Step <span v-text="step.id"></span>: <span v-text="step.title"></span></div>
        </li>
    </script>

    <script type="x-template" id="step-template">
        <div class="step-wrapper text-center" :class="stepWrapperClass">
            <button type="button" class="btn btn-primary" @@click="lastStep" :disabled="firststep">
                Back
            </button>
            <button type="button" class="btn btn-primary" @@click="nextStep" :disabled="laststep">
                Next
            </button>
            <button type="submit" class="btn btn-primary" v-if="laststep">
                Submit
            </button>
        </div>
    </script>
</div>



@section scripts
{
    <script type="text/javascript">

        var pageApp = new Vue({
            el: '#app',
            data: {
                BusinessMatches: [
                ],
                Qry: '',
                currentstep: 1,
                canmove: false,
                errormsg: false,
                steps: [
                    {
                        id: 1,
                        title: "Name Search",
                        icon_class: "fa fa-briefcase"
                    },
                    {
                        id: 2,
                        title: "Address",
                        icon_class: "fa fa-map-marker"
                    },
                    {
                        id: 3,
                        title: "StakeHolders",
                        icon_class: "fa fa-users"
                    },
                    {
                        id: 4,
                        title: "Send",
                        icon_class: "fa fa-paper-plane"
                    }
                ]
            },
            methods: {
                SearchNames: function () {
                    var req = DataUtil.SearchName(pageApp.Qry);
                    req.done(function (data) {
                        pageApp.BusinessMatches = data;
                        //check if i can switch to step 2
                        pageApp.canmove = true;
                        //for (var i = 0; i < data.length; i++) {
                        //    if (data[i].match < 50) {

                        //    }
                        //}
                    });
                    req.fail(function (error) {
                        ShowLoading(error.responseJSON.Message, "error");
                    });
                    return 1;
                },
                stepChanged: function (step) {
                    this.currentstep = step;
                }
            }

        });
    </script>
}